{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "app.py"
      }
    ],
    "env": {
      "GEMINI_API_KEY": "@gemini_api_key"
    },
    "functions": {
      "app.py": {
        "maxDuration": 30
      }
    },
    "regions": ["bom1"],
    "build": {
      "env": {
        "PYTHON_VERSION": "3.9"
      }
    }
  }